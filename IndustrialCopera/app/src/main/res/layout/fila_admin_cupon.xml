<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/TV_FACu_Tipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="concierto o producto"
        android:textColor="@color/letra"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TV_FACu_Precio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="precio"
        android:textColor="@color/letra"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/TV_FACu_Tipo"
        app:layout_constraintTop_toTopOf="@+id/TV_FACu_Tipo" />

    <TextView
        android:id="@+id/TV_FACu_Valor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        android:text="30% de descuento"
        android:textColor="@color/letra"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/TV_FACu_Tipo"
        app:layout_constraintTop_toBottomOf="@+id/TV_FACu_Tipo" />

    <TextView
        android:id="@+id/TV_FACu_Min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:text="Precio minimo de 2â‚¬"
        android:textColor="@color/letra"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/TV_FACu_Valor"
        app:layout_constraintTop_toBottomOf="@+id/TV_FACu_Valor" />

    <Button
        android:id="@+id/B_FACu_Editar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/edit_yell"
        app:layout_constraintBottom_toBottomOf="@+id/TV_FACu_Min"
        app:layout_constraintEnd_toEndOf="@+id/TV_FACu_Precio" />

    <Button
        android:id="@+id/B_FACu_Info"
        android:layout_width="35dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/informacion"
        app:layout_constraintBottom_toBottomOf="@+id/B_FACu_Editar"
        app:layout_constraintEnd_toStartOf="@+id/B_FACu_Editar"
        app:layout_constraintTop_toTopOf="@+id/B_FACu_Editar" />
</androidx.constraintlayout.widget.ConstraintLayout>